<div class="card w-100">
  <div class="card-body p-1">
{#    <h5 class="card-title">{{ 'search.title' | trans }}</h5>
#}	{{ form_start(form, {'attr': {'class': 'container-fluid form-group row',
						 'novalidate': 'novalidate'
						} 
				       }) }}
	{{ form_errors(form) }}
	
	<div class="container-fluid row mb-1 d-flex flex-row justify-content-left align-content-center"> 
	    <div class="col-lg-2 col-md-2 col-sm-6">
		{{ form_label(form.numeroReferencia) }}
		{{ form_widget(form.numeroReferencia, { 'id': 'input-numeroReferencia', 'attr': { 'class' : '' } }) }}
		{{ form_errors(form.numeroReferencia) }}
	    </div>
	    <div class="col-lg-2 col-md-2 col-sm-6">
		{{ form_label(form.dni) }}
		{{ form_widget(form.dni, { 'attr': { 'id': 'input-dni', 'class' : '' } }) }}
		{{ form_errors(form.dni) }}
	    </div>
	    {% if is_granted('ROLE_ADMIN') %}
		<div class="col-lg-3 col-md-2">
		    {{ form_label(form.concepto) }}
		    {{ form_widget(form.concepto, { 'attr': { 'class' : '' } }) }}
		    {{ form_errors(form.concepto) }}
		</div>
	    {% endif %}
	    <div class="col-lg-2 col-md-2 align-self-center">
		{{ form_widget(form.search, { 'id': 'btn-search', 'attr': { 'class' : 'btn btn-primary' } }) }}
	    </div>
	</div>
	<div class="container-fluid row">
	    {% if is_granted('ROLE_ADMIN') %}
		<div class="col-lg-2 col-md-2">
		    {{ form_label(form.nombre) }}
		    {{ form_widget(form.nombre, { 'attr': { 'class' : '' } }) }}
		    {{ form_errors(form.nombre) }}
		</div>
		<div class="col-lg-2 col-md-2">
		    {{ form_label(form.apellido1) }}
		    {{ form_widget(form.apellido1, { 'attr': { 'class' : '' } }) }}
		    {{ form_errors(form.apellido1) }}
		</div>
		<div class="col-lg-2 col-md-2">
		    {{ form_label(form.apellido2) }}
		    {{ form_widget(form.apellido2, { 'attr': { 'class' : '' } }) }}
		    {{ form_errors(form.apellido2) }}
		</div>
		<div class="col-lg-2 col-md-2">
		    {{ form_label(form.email) }}
		    {{ form_widget(form.email, { 'attr': { 'class' : '' } }) }}
		    {{ form_errors(form.email) }}
		</div>
	    {% endif %}
	{{ form_end(form) }}
  </div>
</div>