<div class="card w-100">
    <div class="card-body p-1">
{#    <h5 class="card-title">{{ 'search.title' | trans }}</h5>
#}	{{ form_start(form, {'attr': {'class': 'container-fluid form-group',
						 'novalidate': 'novalidate'
						} 
				       }) }}
	{{ form_errors(form) }}
	{% if search %}
	    <div class="form-row align-items-center mb-1"> 
		<div class="col-lg-2 col-md-2 col-sm-6">
		    {{ form_label(form.id) }}
		    {{ form_widget(form.id, { 'id': 'input-id', 'attr': { 'class' : 'form-control-sm' } }) }}
		    {{ form_errors(form.id) }}
		</div>
		<div class="col-lg-2 col-md-2 col-sm-6">
		    {{ form_label(form.dni) }}
		    {{ form_widget(form.dni, { 'attr': { 'id': 'input-dni', 'class' : 'form-control-sm' } }) }}
		    {{ form_errors(form.dni) }}
		</div>
	    </div>
	    <div class="form-row align-items-center mb-1">
		{% if is_granted('ROLE_ADMIN') %}
		    <div class="col-lg-2 col-md-2 col-sm-6">
			{{ form_label(form.numeroReferencia) }}
			{{ form_widget(form.numeroReferencia, { 'id': 'input-numeroReferencia', 'attr': { 'class' : 'form-control-sm' } }) }}
			{{ form_errors(form.numeroReferencia) }}
		    </div>
		    <div class="col-lg-2 col-md-2 col-sm-6">
	{#		{{ form_label(form.numeroReferencia, null, { 'label_attr': {'class':'col-form-label-sm' } }) }}#}
			{{ form_label(form.numeroReferenciaGTWIN) }}
			{{ form_widget(form.numeroReferenciaGTWIN, { 'id': 'input-numeroReferencia', 'attr': { 'class' : 'form-control-sm' } }) }}
			{{ form_errors(form.numeroReferenciaGTWIN) }}
		    </div>
		    <div class="col-lg-3 col-md-2">
			{{ form_label(form.concepto) }}
			{{ form_widget(form.concepto, { 'attr': { 'class' : 'form-control-sm' } }) }}
			{{ form_errors(form.concepto) }}
		    </div>
		    <div class="col-lg-2 col-md-2">
			{{ form_label(form.nombre) }}
			{{ form_widget(form.nombre, { 'attr': { 'class' : 'form-control-sm' } }) }}
			{{ form_errors(form.nombre) }}
		    </div>
		    <div class="col-lg-2 col-md-2">
			{{ form_label(form.apellido1) }}
			{{ form_widget(form.apellido1, { 'attr': { 'class' : 'form-control-sm' } }) }}
			{{ form_errors(form.apellido1) }}
		    </div>
		    <div class="col-lg-2 col-md-2">
			{{ form_label(form.apellido2) }}
			{{ form_widget(form.apellido2, { 'attr': { 'class' : 'form-control-sm' } }) }}
			{{ form_errors(form.apellido2) }}
		    </div>
		    <div class="col-lg-2 col-md-2">
			{{ form_label(form.email) }}
			{{ form_widget(form.email, { 'attr': { 'class' : 'form-control-sm' } }) }}
			{{ form_errors(form.email) }}
		    </div>
		    <div class="col-lg-2 col-md-2">
			{{ form_label(form.telefono) }}
			{{ form_widget(form.telefono, { 'attr': { 'class' : 'form-control-sm' } }) }}
			{{ form_errors(form.telefono) }}
		    </div>
		{% endif %}
		{{ form_widget(form.search, { 'attr': { 'class' : 'btn btn-primary' } }) }}
	    </div>
	{% else %}
	    <div class="form-row align-items-center mb-1"> 
		<div class="col-lg-2 col-md-2 col-sm-6">
		    {{ form_label(form.dni) }}
		    {{ form_widget(form.dni, { 'attr': { 'id': 'input-dni', 'class' : 'form-control-sm' } }) }}
		    {{ form_errors(form.dni) }}
		</div>
		<div class="col-lg-2 col-md-2">
		    {{ form_label(form.nombre) }}
		    {{ form_widget(form.nombre, { 'attr': { 'class' : 'form-control-sm' } }) }}
		    {{ form_errors(form.nombre) }}
		</div>
		<div class="col-lg-2 col-md-2">
		    {{ form_label(form.apellido1) }}
		    {{ form_widget(form.apellido1, { 'attr': { 'class' : 'form-control-sm' } }) }}
		    {{ form_errors(form.apellido1) }}
		</div>
		<div class="col-lg-2 col-md-2">
		    {{ form_label(form.apellido2) }}
		    {{ form_widget(form.apellido2, { 'attr': { 'class' : 'form-control-sm' } }) }}
		    {{ form_errors(form.apellido2) }}
		</div>
		<div class="col-lg-2 col-md-2">
		    {{ form_label(form.email) }}
		    {{ form_widget(form.email, { 'attr': { 'class' : 'form-control-sm' } }) }}
		    {{ form_errors(form.email) }}
		</div>
	    {{ form_widget(form.save, { 'attr': { 'class' : 'btn btn-primary ml-1' } }) }}
	    {% set url = path('receipt_find') %}
	    {{ form_widget(form.back, { 'attr': { 'class' : 'js-back btn btn-primary ml-1' ,
				     'data-url' : url },
			  }) }}
	    </div>
	{% endif %}
	     {{ form_end(form, {'attr': {'class': '',
					    } 
				   }) }}
    </div>
</div>