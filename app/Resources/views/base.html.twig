<!DOCTYPE html>
<html lang="{{ app.request.locale|split('_')[0] }}">
    <head>
        <meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
	<link rel="stylesheet" href="{{ asset('bower_components/bootstrap/dist/css/bootstrap.min.css') }}">
	<link rel="stylesheet" href="{{ asset('css/style.css') }}">
    </head>
    <body>
	{% block header %}
	    {{ include('common/header.html.twig') }}
	{% endblock header %}
	{% block menu %}
	    {{ include('common/menu.html.twig') }}
	{% endblock %}
	{% block message %}{% endblock message %}
	{% block body %}{% endblock body %}
	{% block javascripts %}
	    <script type="text/javascript" src="{{ asset('bower_components/jquery/dist/jquery.min.js') }}"></script>
	    <script type="text/javascript" src="{{ asset('bower_components/popper.js/dist/umd/popper.min.js') }}"></script>
	    <script type="text/javascript" src="{{ asset('bower_components/bootstrap/dist/js/bootstrap.min.js') }}"></script>
	    <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
	    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
	    <script type="text/javascript" src="{{ asset('js/orokorra.js') }}"></script>
{#	    <!-- FOSRouting Symfony Bundle -->
	    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
	    <script src="{{ asset('js/fos_js_routes.js') }}"></script>
#}	{% endblock javascripts %}
</body>
</html>